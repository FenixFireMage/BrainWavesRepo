<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/birch_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MathQuiz.MathQuizActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Math Quiz"
        android:textColor="#CC0099"
        android:textSize="30sp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_maroon"
        android:text="Start Game"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51dp"
        android:layout_weight="0.10"
        android:src="@drawable/blue_brain_waves"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/highscores"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/instructions"
        android:layout_below="@+id/instructions"
        android:layout_marginTop="27dp"
        android:background="@drawable/button_maroon"
        android:text="High Scores"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/instructions"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/startButton"
        android:layout_below="@+id/startButton"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_maroon"
        android:text="Instructions"
        android:textStyle="bold" />


</RelativeLayout>
