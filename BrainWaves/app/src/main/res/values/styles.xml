<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="brainstyle">
        <item name="android:editTextColor">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>

        <item name="android:colorBackground">@color/colorPrimary</item>"
        <item name="android:textColor">#f48fb1</item>
        <item name="android:textSize">18dip</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="headerText">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">#91363B</item>
    </style>

    <style name="h2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#110A35</item>
    </style>

    <style name="bodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0c002b</item>
        <item name="android:textColorLink">#892E4E</item>
    </style>

</resources>
